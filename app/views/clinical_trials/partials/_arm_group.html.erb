<div class="arm-group">
  <h4>Arm Group: <%= arm_group.label %></h4>
  <p><strong>Type:</strong> <%= arm_group.arm_type %></p>
  <p><strong>Description:</strong> <%= arm_group.description %></p>

  <h5>Interventions:</h5>
  <% arm_group.interventions.each do |intervention| %>
    <div class="intervention ml-4">
      <p><strong>Name:</strong> <%= intervention.name %></p>
      <p><strong>Type:</strong> <%= intervention.intervention_type %></p>
      <p><strong>Description:</strong> <%= intervention.description %></p>
    </div>
  <% end %>
</div>
<hr>
